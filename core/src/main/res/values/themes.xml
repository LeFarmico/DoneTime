<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#efefef</item>
        <item name="colorPrimaryDark">#efefef</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">#ffd54f</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="backgroundColor">#efefef</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Action mode. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionBarStyle</item>

        <!-- App bar. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>

        <!-- Date picker theme -->
        <item name="android:datePickerStyle">@style/DatePickerTheme</item>

    </style>

</resources>