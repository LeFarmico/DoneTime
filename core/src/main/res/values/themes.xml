<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fbbc0d</item>
        <item name="colorPrimaryDark">#FBA729</item>
        <item name="colorSecondary">#fd1f4b</item>

        <item name="backgroundColor">@color/background</item>
        <item name="colorSurface">#fbbc0d</item>

        <!--        <item name="titleTextColor">@color/black</item>-->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Action mode. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
    </style>

</resources>