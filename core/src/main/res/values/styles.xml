<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="ButtonStyle.Variant" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ButtonStyle.Outline" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_button_outline</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextStyle.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="TextStyle.Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextStyle.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextStyle.HeadlineBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="TextStyle.SubHead">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="BottomNavigationBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemIconTint">@drawable/selector_menu</item>
        <item name="itemTextColor">@drawable/selector_menu</item>
    </style>

    <style name="DatePickerTheme" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?attr/colorSecondary</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/backgroundColor</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextStyle.Toolbar</item>
    </style>
</resources>