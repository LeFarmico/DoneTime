<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <ToggleButton
        android:id="@+id/edit_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/selector_edit_button"
        android:textOff=""
        android:textOn=""
        android:backgroundTint="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/workout_date"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/workout_date"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingBottom="4dp"
        android:text="@string/date"
        style="@style/TextStyle.SubHead"
        app:layout_constraintStart_toEndOf="@id/edit_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exercises_recycler"
        android:layout_marginStart="16dp"
        android:gravity="bottom"
        />
    
    <ImageView
        android:id="@+id/details_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_info_24"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/workout_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:contentDescription="@string/edit"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/workout_date"
        app:layout_constraintStart_toEndOf="@id/edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_note_exercise"
        tools:itemCount="5"
        android:background="@drawable/shape_button_variant"
        android:paddingHorizontal="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
</androidx.constraintlayout.widget.ConstraintLayout>